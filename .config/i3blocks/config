command=~/.scripts/blocks/$BLOCK_NAME
separator_block_width=15
markup=none

[volume]
label=🔊
command=pactl list sinks | rg -e Volume: | head -n 1 | sed -r 's/.* ([0-9]+%).*/\1/'
color=#A8DFEA
interval=1

[media]
label=🎵
color=#D5A3F7
interval=1

[weather]
command=weather_cli | head -n 1
color=#A4C2F4
interval=900

[ip]
label=🖥️
command=hostname -i | awk '{ print $1 }'
color=#b0ecf2
interval=once

[date]
label=📅
command=date "+%a %D"
color=#e4cbf4
interval=60

# Update time every 1 seconds
[time]
label=🕕
command=date "+%H:%M"
color=#A4C2F4
interval=60

